<body>
  <div class="login-container">
    <h1>Login</h1>
    <label for="USUARIO">USUÁRIO:</label>
    <input type="text" id="USUARIO" placeholder="USUÁRIO">
    <label for="SENHA">SENHA:</label>
    <input type="password" id="SENHA" placeholder="SENHA" onkeydown="checkEnter(event)">
    <button onclick="login()">Login</button>
  </div>

  <script>
    function checkEnter(event) {
      if (event.key === "Enter") {
        event.preventDefault();
        login();
      }
    }

    function login() {
      var usuario = document.getElementById("USUARIO").value;
      var senha = document.getElementById("SENHA").value;

     
      var usuarioCorreto = "usuario";
      var senhaCorreta = "3ano";

      if (usuario === usuarioCorreto && senha === senhaCorreta) {
        alert("Login bem-sucedido entre meu parceiro!"); 
      window.location.href = "galeria.html";
      } else {
        alert("Usuário ou senha erradão parceiro."); 
     }
    }
  </script>

